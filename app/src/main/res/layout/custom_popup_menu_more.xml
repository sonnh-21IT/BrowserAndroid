<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back_ground_popup_menu_custom"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40ACA5A5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_close"
            android:padding="5dp" />

        <TextView
            android:id="@+id/menu_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_refresh"
            android:padding="5dp" />

        <TextView
            android:id="@+id/menu_book_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_bookmark"
            android:padding="5dp" />

        <TextView
            android:id="@+id/menu_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_share"
            android:padding="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/menu_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_history"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_download"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:text="Download"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_star"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:text="Favorite"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_desktop_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_desktop"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:text="Desktop mode"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_scan_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_qr_code"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:text="Scan QR code"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/menu_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:text="Setting"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_info"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:text="About"
        android:textColor="@color/black"
        android:textSize="16sp" />
</LinearLayout>