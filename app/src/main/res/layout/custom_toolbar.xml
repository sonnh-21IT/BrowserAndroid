<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tool_bars"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:elevation="3dp"
    android:orientation="vertical"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    app:layout_scrollFlags="scroll|enterAlways|snap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:weightSum="10">


        <TextView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="0.7"
            android:background="@drawable/back_ground_toggle_btn"
            android:drawableStart="@drawable/ic_home"
            android:elevation="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="7.9"
            android:background="@drawable/back_ground_toggle_search"
            android:elevation="5dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/btnSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.7"
                android:drawableStart="@drawable/ic_search" />

            <EditText
                android:id="@+id/edtUrl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:background="@color/white"
                android:hint="Enter Url Or Search"
                android:imeOptions="actionGo"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/btnClearUrl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.7"
                android:background="@drawable/ic_cancel" />

            <View
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.1"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/btnMic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.7"
                android:background="@drawable/ic_mic" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="0.7"
            android:background="@drawable/back_ground_toggle_btn"
            android:elevation="5dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/btnMore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="0.7"
            android:background="@drawable/back_ground_toggle_btn"
            android:drawableEnd="@drawable/ic_more"
            android:elevation="5dp"
            android:gravity="center"
            android:textSize="12dp" />
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>